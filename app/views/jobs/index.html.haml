.content-area
  .row
    .six.columns
      %h2.work-welcome{:name => "top"} My Projects
    .six.columns
      %button.u-pull-right.download-button
        =link_to "Download Resume", "https://www.dropbox.com/s/om95mpyjx549c1i/JRS%20Resume%20July%202017.pdf?dl=0", class: "downloadlink"
        %i.fa.fa-download.download
  .row.grid
    - @jobs.each do |job|
      .four.columns.listWork.bounce-up.grid-item
        %h4.job-header= job.name
        %p= job.company
        %p
          = job.date_start.nil? ? "" : job.date_start.strftime("%b '%y")
          |
          - if job.date_end.nil?
            = "Present"
          - else
            = job.date_end.strftime("%b '%y")
        %p= job.job_type
        %p= job.network
        %p= job.job_title
